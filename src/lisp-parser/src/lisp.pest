WHITESPACE = _{ " " | "\t" | "\r" | "\n" }
NUMBER = @{
    "-"?
    ~ ("0" | ASCII_NONZERO_DIGIT ~ ASCII_DIGIT*)
    ~ ("." ~ ASCII_DIGIT*)?
    ~ (^"e" ~ ("+" | "-")? ~ ASCII_DIGIT+)?
}
OPERATOR = { "+" | "-" | "*" | "/" }
EXPR = { NUMBER | "(" ~ OPERATOR ~ EXPR+ ~ ")" }
SAUCY = { 
  SOI
    ~ (OPERATOR ~ EXPR+)
    ~ EOI
  }